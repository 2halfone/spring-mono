version: "3.8"

services:
  postgres:
    image: postgres:15
    restart: always
    environment:
      POSTGRES_DB: mydb
      POSTGRES_USER: springuser      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD:-change_me}
    ports:
      - "15432:5432"
    volumes:
      - pgdata:/var/lib/postgresql/data

  redis:
    image: redis:7-alpine
    restart: always
    ports:
      - "16379:6379"
    command: redis-server --requirepass ${REDIS_PASSWORD:-}
    volumes:
      - redisdata:/data

  auth-service:
    build: ./auth-service
    depends_on:
      - postgres
    ports:
      - "9081:8080"
    environment:
      SPRING_DATASOURCE_URL: jdbc:postgresql://postgres:5432/mydb
      SPRING_DATASOURCE_USERNAME: springuser
      SPRING_DATASOURCE_PASSWORD: ${POSTGRES_PASSWORD:-change_me}
      JWT_SECRET: ${JWT_SECRET:-mySecretKey123456789012345678901234567890}
      JWT_EXPIRATION_MS: ${JWT_EXPIRATION_MS:-86400000}
      JWT_ISSUER: ${JWT_ISSUER:-spring-microservices}

  chat-service:
    build: ./chat-service
    depends_on:
      - postgres
    ports:
      - "9082:8080"
    environment:
      SPRING_DATASOURCE_URL: jdbc:postgresql://postgres:5432/mydb
      SPRING_DATASOURCE_USERNAME: springuser
      SPRING_DATASOURCE_PASSWORD: ${POSTGRES_PASSWORD:-change_me}      JWT_SECRET: ${JWT_SECRET:-mySecretKey123456789012345678901234567890}
      JWT_ISSUER: ${JWT_ISSUER:-spring-microservices}

  gateway:
    build: ./gateway/initial
    depends_on:
      - auth-service
      - chat-service
      - redis
    ports:
      - "9443:8443"  # HTTPS port
      - "9080:8080"  # HTTP redirect port
    environment:
      JWT_SECRET: ${JWT_SECRET:-mySecretKey123456789012345678901234567890}
      JWT_ISSUER: ${JWT_ISSUER:-spring-microservices}
      SSL_KEYSTORE_PASSWORD: ${SSL_KEYSTORE_PASSWORD:-changeit}
      SSL_KEY_PASSWORD: ${SSL_KEY_PASSWORD:-changeit}
      REDIS_HOST: redis
      REDIS_PORT: 6379
      REDIS_PASSWORD: ${REDIS_PASSWORD:-}

volumes:
  pgdata:
  redisdata:
