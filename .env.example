# =================================================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# =================================================================
# Copy this file to .env and customize the values for your environment
# NEVER commit .env to version control - add it to .gitignore

# =================================================================
# JWT SECURITY CONFIGURATION
# =================================================================
# CRITICAL: Generate a strong secret key (minimum 256 bits / 32 characters)
# Use: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-minimum-256-bits-32-chars
JWT_ISSUER=spring-microservices
JWT_EXPIRATION_MS=86400000

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
DATABASE_URL=jdbc:postgresql://localhost:5432/springdb
DATABASE_USERNAME=springuser
DATABASE_PASSWORD=your-secure-db-password
POSTGRES_PASSWORD=your-postgres-admin-password

# =================================================================
# SSL/TLS CONFIGURATION
# =================================================================
SSL_KEYSTORE_PASSWORD=your-ssl-keystore-password

# =================================================================
# REDIS CONFIGURATION (Rate Limiting)
# =================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# =================================================================
# APPLICATION PORTS
# =================================================================
AUTH_SERVICE_PORT=8080
GATEWAY_SERVICE_PORT=8443
CHAT_SERVICE_PORT=8081

# =================================================================
# PRODUCTION SECURITY SETTINGS
# =================================================================
SPRING_PROFILES_ACTIVE=prod
LOGGING_LEVEL_ROOT=WARN
LOGGING_LEVEL_SECURITY=INFO
